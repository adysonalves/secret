{{>header}}

<main class="page">
    <div class="container">

    <section class="ask-container">
        <h2>Pergunte para <strong>@{{username}}</strong></h2>
        {{>_msg}}
        
        <form class="form-ask" action="" method="post">
        <div class="row">
            <textarea name="ask" placeholder="Digite sua pergunta:
- Use com responsabilidade.
- @{{username}} nunca saberá quem enviou essa mensagem.
- Não espalhe ódio." required></textarea>
        </div>

            <button type="submit">Enviar pergunta</button>
 
        </form>
    </section>

    <section class="ask-feed">
        <h3>Timeline de <strong>@{{username}}</strong></h3>

        {{#if ask}}
        {{#each ask}}
        <div class="ask">
            <h3>{{ask}}</h3>
            {{#if answer}}
            <p>{{answer}}</p>
            {{else}}
            <p>Aguardando resposta...</p>
            {{/if}}
        </div>
        {{/each}}
        {{else}}
        <p>@{{username}} ainda não recebeu nenhuma pergunta...</p>
        {{/if}}

    </section>
    </div>
</main>